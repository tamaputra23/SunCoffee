<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderActivity"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/img_title"
            android:layout_width="210dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:src="@drawable/img_lakalaka" />

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="KOPI LAKA - LAKA"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:textSize="20sp"
            android:id="@+id/tv_title"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/btn_place"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="50dp"
            android:onClick="Place"
            android:src="@drawable/ic_picturte" />
        <ImageView
            android:id="@+id/btn_openhour"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="74dp"
            android:onClick="Openhour"
            android:src="@drawable/ic_clock" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:onClick="Navigasi"
            android:layout_marginStart="74dp"
            android:src="@drawable/ic_maps" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>